{
    "hooks": {
      "Stop": [
        {
          "matcher": ".*",
          "hooks": [
            {
              "type": "command",
              "command": "say 'タスクが完了しました'"
            }
          ]
        }
      ],
      "PostToolUse": [
        {
          "matcher": "Write|Edit|MultiEdit",
          "hooks": [
            {
              "type": "command",
              "command": "npm run lint && npm run format && npm run type-check && npm run analyze"
            }
          ]
        }
      ]
    }
  }